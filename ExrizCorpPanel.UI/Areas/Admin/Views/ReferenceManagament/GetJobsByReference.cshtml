@model IEnumerable<ExrizCorpPanel.Data.Models.DB.ReferenceJobMapping>

@{
    ViewData["Title"] = "GetJobsByReference";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var result = TempData["result"];

}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 1434px;">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
        <h1 class="page-title">
            Exriz Kurumsal Panel

        </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a>Blog İşlemleri</a>
                    <i class="fa fa-angle-right"></i>
                </li>

                <li>
                    <i class="icon-eye"></i>
                    <a href="@Url.Action("GetPage","LanguageManagament")">Sayfa Listesi</a>
                </li>
            </ul>
            <div class="page-toolbar">

            </div>
        </div>

        @{

            if (Convert.ToInt32(result) == 1)
            {
                <div class="note note-success">
                    <h3>İşlem Durumu</h3>
                    <p>
                        Referans silindi
                        <a class="btn btn-small red btn-outline" href="#" target="_blank">listelemeye git</a>
                    </p>
                </div>
            }
            else if (Convert.ToInt32(result) == -1)
            {
                <div class="note note-danger">
                    <h3>İşlem Durumu</h3>
                    <p>
                        Referans silinemedi
                        <a class="btn btn-small red btn-outline" href="#" target="_blank">hatayı bildir</a>
                    </p>
                </div>
            }
            else
            {

            }
        }
        <!-- END PAGE HEADER-->
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-list font-dark"></i>
                        <span class="caption-subject bold uppercase">Sayfa Listesi</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="portlet-body">
                    <div class="dataTables_wrapper">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="dt-buttons">
                                    <a class="dt-button buttons-print btn dark btn-outline" tabindex="0" aria-controls="sample_1" href="#">
                                        <span>Sayfayı Yazdır</span>
                                    </a>
                                    <a class="dt-button buttons-pdf buttons-html5 btn green btn-outline" tabindex="0" aria-controls="sample_1" href="#">
                                        <span>PDF</span>
                                    </a>
                                    <a class="dt-button buttons-csv buttons-html5 btn purple btn-outline" tabindex="0" aria-controls="sample_1" href="#">
                                        <span>CSV</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div>
                            <table class="table table-striped table-bordered table-hover" id="banner" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th class="all sorting_asc" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending">Refereans Adı</th>
                                        <th class="min-phone-l sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1">İş Sayısı</th>
                                        <th class="none sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1">İşlemler</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row" class="odd">
                                           
                                            <td tabindex="0" class="sorting_1">@item.JobSystemName</td>
                                            <td tabindex="0" class="sorting_1">@item.Reference.ReferenceName</td>

                                            <td>
                                                <div class="btn-group pull-right">
                                                    <button class="btn green btn-xs btn-outline dropdown-toggle" data-toggle="dropdown">
                                                        İşlemler
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu pull-right">
                                                        <li>
                                                            <a href="@Url.Action("UpdateJobImage","ReferenceManagament",new {id=item.Id })">
                                                                <i class="fa fa-edit"></i> Düzenle
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="@Url.Action("deleteReference","ReferenceManagament",new {id=item.Id })">
                                                                <i class="fa fa-trash-o"></i>Sil
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }








                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>
@section extraScript{

    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script>
        $().ready(function () {
            $('#banner').DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Turkish.json",
                        "scrollX": true
                    }
                });
        });
    </script>
}