@model ExrizCorpPanel.UI.Areas.Admin.Models.CustomModels.RequestTypes.BannerRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddSliderGallery";  

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var language = TempData["lang"] as List<SelectListItem>;
    var result = TempData["result"];
    var urls = ViewBag.Urls;
}


<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 1434px;">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
        <h1 class="page-title">
            Exriz Kurumsal Panel

        </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    @*<i class="icon-home"></i>*@
                    <a>Banner İşlemleri</a>
                    <i class="fa fa-angle-right"></i>
                </li>

                <li>
                    @*<i class="icon-eye"></i>*@
                    <a href="@Url.Action("AddBanner","BannerManagament")">Banner Ekle</a>
                </li>
            </ul>
            <div class="page-toolbar">

            </div>
        </div>
        <!-- END PAGE HEADER-->
        <div class="note note-info">


            @{

                if (Convert.ToInt32(result) == 1)
                {
                    <div class="note note-success">
                        <h3>İşlem Durumu</h3>
                        <p>
                            Banner kayıt işlemi başarılı
                            <a class="btn btn-small red btn-outline" href="#" target="_blank">listelemeye git</a>
                        </p>
                    </div>
                }
                else if (Convert.ToInt32(result) == -1)
                {
                    <div class="note note-danger">
                        <h3>İşlem Durumu</h3>
                        <p>
                            Banner kayıt işlemi başarısız
                            <a class="btn btn-small red btn-outline" href="#" target="_blank">hatayı bildir</a>
                        </p>
                    </div>
                }
                else
                {

                }
            }
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-equalizer font-red-sunglo"></i>
                        <span class="caption-subject font-red-sunglo bold uppercase">Banner Ekle</span>

                    </div>
                    @*<div class="actions">
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-cloud-upload"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-wrench"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-trash"></i>
                            </a>
                        </div>*@
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form enctype="multipart/form-data" method="post" asp-controller="BannerManagament" asp-action="PostBanner" class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group">
                                <label asp-for="BannerName" class="col-md-3 control-label">Banner İsmi</label>
                                <div class="col-md-4">
                                    <input asp-for="BannerName" name="BannerName" type="text" class="form-control" placeholder="Banner adı" />

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" asp-for="BannerLink">Banner Linki</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" asp-for="BannerLink" name="BannerLink" placeholder="Banner linki">

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" asp-for="BannerContent">Banner Açıklaması</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" asp-for="BannerContent" name="BannerContent" placeholder="Banner açıklaması">

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" asp-for="Image">Banner Görseli</label>
                                <div class="col-md-4">
                                    <div class="upload-btn-wrapper">
                                        <button class="uploadbtn">Upload a file</button>
                                        <input type="file" asp-for="banner" name="banner" multiple />
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label" asp-for="LangId"></label>
                                <div class="col-md-4">
                                    <select asp-for="LangId" name="LangId" asp-items="@language"></select>

                                </div>
                            </div>


                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-4">
                                    <button type="submit" class="btn green">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
            </div>


        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>


