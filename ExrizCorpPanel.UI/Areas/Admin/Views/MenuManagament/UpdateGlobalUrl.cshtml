@model ExrizCorpPanel.Data.Models.DB.GlobalUrls
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddMenuItem";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var language = TempData["lang"] as List<SelectListItem>; ;
    var url = TempData["menuItems"] as List<SelectListItem>;
    var menus = TempData["menus"] as List<SelectListItem>;
    var parentMenu = TempData["parentMenu"] as List<SelectListItem>;
    var result = TempData["result"];

}

@section extraCss{
    <link href="~/assets/global/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" type="text/css">
    <link href="~/assets/global/plugins/bootstrap-tagsinput/bootstrap-tagsinput-typeahead.css" rel="stylesheet" type="text/css">
    <link href="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />
}


<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 1434px;">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
        <h1 class="page-title">
            Exriz Kurumsal Panel

        </h1>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    @*<i class="icon-home"></i>*@
                    <a>Banner İşlemleri</a>
                    <i class="fa fa-angle-right"></i>
                </li>

                <li>
                    @*<i class="icon-eye"></i>*@
                    <a href="@Url.Action("AddMenuItem","MenuManagament")">Dil Ekle</a>
                </li>
            </ul>
            <div class="page-toolbar">

            </div>
        </div>
        <!-- END PAGE HEADER-->
        <div class="note note-info">


            @{

                if (Convert.ToInt32(result) == 1)
                {
                    <div class="note note-success">
                        <h3>İşlem Durumu</h3>
                        <p>
                            Menu kayıt işlemi başarılı
                            <a class="btn btn-small red btn-outline" href="#" target="_blank">listelemeye git</a>
                        </p>
                    </div>
                }
                else if (Convert.ToInt32(result) == -1)
                {
                    <div class="note note-danger">
                        <h3>İşlem Durumu</h3>
                        <p>
                            Menu kayıt işlemi başarısız
                            <a class="btn btn-small red btn-outline" href="#" target="_blank">hatayı bildir</a>
                        </p>
                    </div>
                }
                else
                {

                }
            }
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-equalizer font-red-sunglo"></i>
                        <span class="caption-subject font-red-sunglo bold uppercase">Menu Ekle</span>

                    </div>
                    @*<div class="actions">
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-cloud-upload"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-wrench"></i>
                            </a>
                            <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                                <i class="icon-trash"></i>
                            </a>
                        </div>*@
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form enctype="multipart/form-data" asp-controller="MenuManagament" asp-action="UpdateGlobalUrl" class="form-horizontal">
                        <div class="form-body">
                            <input asp-for="Id" type="text" name="Id" class="form-control" value="@Model.Id" placeholder="Entity Başlığı" style="display:none" />
                            <div class="form-group">
                                <label asp-for="EntityTitle" class="col-md-3 control-label">Entity Başlığı</label>
                                <div class="col-md-4">
                                    <input asp-for="EntityTitle" type="text" class="form-control" value="@Model.EntityTitle" placeholder="Entity Başlığı" />

                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ExternalLink" class="col-md-3 control-label">Link</label>
                                <div class="col-md-4">
                                    <input asp-for="ExternalLink" type="text" class="form-control" value="@Model.ExternalLink" placeholder="Link" />

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">External Link mi</label>
                                <div class="col-md-4">
                                    @if (Model.IsExternalLink == true)
                                    {
                                        <input type="checkbox" name="IsExternalLink" class="form-control" value="true" placeholder="External Link mi" checked />
                                    }
                                    else
                                    {
                                        <input type="checkbox" name="IsExternalLink" class="form-control" value="true" placeholder="External Link mi" />
                                    }


                                </div>
                            </div>


                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-4">
                                    <button type="submit" class="btn green">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
            </div>


        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

@section extraScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap-wizard/1.2/jquery.bootstrap.wizard.js"></script>
    <script src="~/assets/global/plugins/bootstrap-tagsinput/bootstrap-tagsinput.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/typeahead/typeahead.bundle.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/components-bootstrap-tagsinput.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>


    <script>

    </script>
}